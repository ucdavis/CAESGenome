@model IQueryable<User>

@{
    ViewBag.Title = "Users";
    ViewBag.SubPagetitle = "Users";
}

@section scripts
{
    @Html.Partial("_DataTables")
}

@section SubPageMenu
{
    <ul class="nav nav-pills">
        <li>@Html.ActionLink("Create User", "CreateUser")</li>
        <li>@Html.ActionLink("Back to PI Home", "Index")</li>
    </ul>
}

<table class="table table-striped table-bordered default_table">
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Title</th>
            <th>Phone</th>
            <th>Fax</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("EditUser", new {@id = user.Id})" class="btn hastip" title="Edit User">
                        <i class="icon-pencil"></i>
                    </a>
                </td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Title</td>
                <td>@user.Phone</td>
                <td>@user.Fax</td>
            </tr>
        }
    </tbody>
</table>