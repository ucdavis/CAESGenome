@using CAESGenome.Core.Resources
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - CA&ES Genomics Facility</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("CA&ES Genomics Facility", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @if(User.IsInRole(RoleNames.User))
                            {
                                
                                
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">User</a>
                                    <b class="caret"></b>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("User Home", "Index", "Authorized")</li>
                                        <li class="divider"></li>
                                        <li class="nav-header">Job Submission</li>
                                        <li>@Html.ActionLink("Submit Sequencing Job", "Create", "Sequencing")</li>
                                        <li>@Html.ActionLink("Submit Genotyping Job", "Create", "Genotyping")</li>
                                        <li>@Html.ActionLink("Submit Qbot Job", "Create", "Qbot")</li>
                                        <li class="divider"></li>
                                        <li class="nav-header">Job History</li>
                                        <li>@Html.ActionLink("Open Jobs", "Index", "UserJob")</li>
                                        <li class="divider"></li>
                                        <li class="nav-header">Reservations</li>
                                        <li>@Html.ActionLink("Equipment", "Reserve", "Equipment")</li>
                                        <li>@Html.ActionLink("Reservations", "Reservations", "Equipment")</li>
                                    </ul>
                                </li>
                                
                            }
                            @if(User.IsInRole(RoleNames.PI))
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">PI</a>
                                    <b class="caret"></b>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("PI Home", "Index", "PI")</li>
                                        <li>@Html.ActionLink("Manage Users", "Users", "PI")</li>
                                        <li>@Html.ActionLink("Recharge Accounts", "RechargeAccounts", "PI")</li>
                                    </ul>
                                </li>
                                
                            }
                            @if(User.IsInRole(RoleNames.Staff))
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Staff</a>
                                    <b class="caret"></b>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Staff Home", "Index", "Staff")</li>
                                        <li class="divider"></li>
                                        <li class="nav-header">Jobs</li>
                                        <li>@Html.ActionLink("On-Going Jobs", "Index", "UserJob")</li>
                                        <li><a href="#">Completed Jobs</a></li>
                                        <li><a href="#">Monthly Stats</a></li>
                                        <li class="divider"></li>
                                        <li class="nav-header">Equipment Microscope</li>
                                        <li>@Html.ActionLink("Schedule", "Schedule", "Equipment")</li>
                                        <li><a href="#">Monthly Usage</a></li>
                                    </ul>
                                </li>
                            }
                            <li>@Html.ActionLink("Services", "Service", "Home")</li>
                            <li>@Html.ActionLink("Rates", "Rates", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @*@RenderSection("featured", required: false)*@
            
            @if(!string.IsNullOrEmpty(ViewBag.SubPageTitle))
            {
                <section class="featured">
                    <div class="content-wrapper">
                        <hgroup class="title">
                            <h1>@ViewBag.SubPageTitle</h1>
                        </hgroup>
                    </div>
                </section>
            }

            <section class="content-wrapper main-content clear-fix">
                <div class="pull-right">
                    @RenderSection("SubPageMenu", required: false)          
                </div>
                
                <div style="clear:both;"></div>

                @if(!string.IsNullOrEmpty(TempData["Message"] as string))
                {
                    <div class="alert alert-info">@TempData["Message"]</div>
                }
                
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; The Regents of the University of California, Davis Campus.  All Rights Reserved.</p>
                </div>
                <div class="float-right">
                    <p>Version: @ViewBag.Version</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
        @Html.Partial("_polyfills")

        <script type="text/javascript">
            $(function () {
                $(".hastip").tooltip();
            });
        </script>
        
        @RenderSection("scripts", required: false)
    </body>
</html>
