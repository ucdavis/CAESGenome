@model QbotViewModel

@using(Html.BeginForm("Create", "Qbot", FormMethod.Get))
{
    <h3>Q-Bot</h3>
    <p>
        Any request that will not be sequenced. Includes Q-Bot specific tasks, such as colony picking, replicating plates and gridding, genotyping and other custom Jobs not listed. Contact - Jongmin Baek <a href="mailto:jmbaek@ucdavis.edu">jmbaek@ucdavis.edu</a>
    </p>

    <ul class="unstyled">
        @foreach(var jt in Model.JobTypes.OrderBy(a => a.Id))
        {
            <li>
                <label class="checkbox">
                    @Html.RadioButton("id", jt.Id)
                    @Html.Raw(jt.DisplayName)
                </label>
            </li>
        }
    </ul>

    <h3>Other Custom Jobs</h3>
    
    <p>Contact CGF Staff - Jongmin Baek <a href="mailto:jmbaek@ucdavis.edu">jmbaek@ucdavis.edu</a></p>
    
    <input type="submit" value="Open Job" class="btn btn-primary"/>
}

